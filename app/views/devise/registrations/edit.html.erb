<div class="container mt-5 pt-5" style="max-width: 600px;">
  <div class="card mb-3">
    <div class="card-body text-center">
      <div class="d-flex justify-content-center mb-3">
        <img src="https://www.gravatar.com/avatar/placeholder" alt="Avatar" class="rounded-circle" style="width: 150px; height: 150px;">
      </div>
      <h3 class="card-title text-center">Редактировать профиль</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :username, class: 'form-label' %>
          <%= f.text_field :username, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :current_password, "Текущий пароль (для подтверждения изменений)", class: 'form-label' %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "Новый пароль", class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Подтвердите новый пароль", class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit "Обновить", class: "btn btn-primary" %>
          <%= link_to 'Отмена', root_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
