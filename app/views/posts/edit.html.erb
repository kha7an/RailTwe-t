<div class="container mt-5 pt-5" style="max-width: 600px;">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Редактировать пост</h3>
      <%= form_with(model: @post, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
        <% if @post.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h4><%= pluralize(@post.errors.count, "ошибка") %> не позволяют сохранить пост:</h4>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group mb-3">
          <%= form.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <div class="d-flex justify-content-between">
          <%= form.submit "Сохранить изменения", class: "btn btn-primary" %>
          <%= link_to 'Отмена', post_path(@post), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
